<div class="contextual">
  <%= link_to_if_authorized l(:label_contact_new), {:controller => 'contacts', :action => 'new', :project_id => @project}, :class => 'icon icon-add' %>
</div>

<h2><%= l(:label_contact_edit_information) %></h2>

<% labelled_tabular_form_for :contact, @contact, :url => {:action => 'update', :project_id => @project, :id => @contact}, :html => { :multipart => true} do |f|  %>
  <%= render :partial => 'form', :locals => {:f => f}  %>    
  <%= submit_tag l(:button_save) -%>
<% end -%>

   


<% content_for :sidebar do %>
	<%= render :partial => 'common/sidebar' %>   
	<%= render :partial => 'related_projects' %>
<% end %>

<% content_for(:header_tags) do %>
  <style type="text/css">
    .icon-users { background-image: url(../../images/users.png); }
  </style>
<% end %>  

